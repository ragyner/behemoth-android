<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b0f14"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behemoth Slayer â€” Habits (Android Native)"
            android:textStyle="bold"
            android:textColor="#e9f2ff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set times and tap Schedule to arm local notifications."
            android:textColor="#90a4b8"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/addHabitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Habit" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Habits"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/scheduleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Notifications"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90a4b8"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
